{
    "name": "open-translate",
    "publisher": "fatihertugral",
    "displayName": "Open Translate",
    "description": "This open-source VSCode extension utilizes the Lingva Translate project to offer translation functionality directly within the editor. The extension allows you to translate selected text and view the translation in a hover popup.",
    "version": "0.0.1",
    "repository": {
        "type": "git",
        "url": "https://github.com/FatihErtugral/open-translate?tab=readme-ov-file"
    },
    "homepage": "https://github.com/FatihErtugral/open-translate",
    "engines": {
        "vscode": "^1.92.0"
    },
    "categories": [
        "Other"
    ],
    "main": "./out/extension.js",
    "activationEvents": [
        "onStartupFinished"
    ],
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Open Translate Extension",
